<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed?%></p>
<p><%= link_to "Back to my tasks", tasks_path %></p>
<p><%= link_to "Update", edit_task_path(@task) %></p>
<p><%= link_to "Delete #{@task.title}",
       task_path(@task),
       method: :delete,
       data: { confirm: "Are you sure?" } %></p>
